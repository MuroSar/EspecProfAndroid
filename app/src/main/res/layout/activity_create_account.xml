<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CreateAccountActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create account"
                android:textAlignment="center"
                android:textSize="20dp" />

        <EditText
                android:id="@+id/edit_text_create_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:hint="Name"
                android:inputType="textCapSentences" />

        <TextView
                android:id="@+id/text_create_account_name_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se encontró un error en este campo."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="gone" />

        <EditText
                android:id="@+id/edit_text_create_account_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Lastname"
                android:inputType="textCapSentences" />

        <TextView
                android:id="@+id/text_create_account_lastname_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se encontró un error en este campo."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="gone" />

        <EditText
                android:id="@+id/edit_text_create_account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

        <TextView
                android:id="@+id/text_create_account_email_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se encontró un error en este campo."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="gone" />

        <EditText
                android:id="@+id/edit_text_create_account_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:inputType="textPassword" />

        <TextView
                android:id="@+id/text_create_account_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se encontró un error en este campo."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="gone" />

        <EditText
                android:id="@+id/edit_text_create_account_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="DD/MM/AAAA"
                android:inputType="date" />

        <TextView
                android:id="@+id/text_create_account_dob_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se encontró un error en este campo."
                android:textColor="@android:color/holo_red_dark"
                android:textSize="11dp"
                android:textStyle="bold"
                android:visibility="gone" />

        <TextView
                android:id="@+id/text_create_account_general_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="El email seleccionado ya esta en uso, use otro por favor."
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="gone" />

        <Button
                android:id="@+id/button_create_account_create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Create account" />

    </LinearLayout>

</ScrollView>